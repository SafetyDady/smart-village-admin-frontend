# Smart Village Authentication Service Environment Variables

# Database Configuration
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_SSL=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_EXPIRES_IN=86400000

# Server Configuration
NODE_ENV=production
PORT=3002
CORS_ORIGIN=https://smart-village-admin-frontend.vercel.app,http://localhost:5174

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=900000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Audit Configuration
AUDIT_RETENTION_DAYS=90

# API Gateway Configuration
API_GATEWAY_URL=https://your-api-gateway.workers.dev

# Frontend URLs (for CORS)
FRONTEND_URLS=https://smart-village-admin-frontend.vercel.app,http://localhost:5174,http://localhost:5173

