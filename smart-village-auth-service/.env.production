# Production Environment Variables for Railway
NODE_ENV=production
PORT=3002

# Database Configuration (Railway PostgreSQL)
DB_HOST=${{PGHOST}}
DB_PORT=${{PGPORT}}
DB_NAME=${{PGDATABASE}}
DB_USER=${{PGUSER}}
DB_PASSWORD=${{PGPASSWORD}}
DB_SSL=true

# JWT Configuration
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=${{SESSION_SECRET}}
SESSION_EXPIRES_IN=86400000

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=900000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=https://smart-village-admin-frontend.vercel.app,http://localhost:5174

# Audit Configuration
AUDIT_RETENTION_DAYS=90

